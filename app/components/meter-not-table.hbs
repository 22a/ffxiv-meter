<div class="flex flex-col">
  <div class="flex flex-row">
    {{#each this.columns as |column|}}
      <div class="text-white text-shadow border-b {{column.class}}">
        {{column.title}}
      </div>
    {{/each}}
  </div>

  {{#each this.combatants as |combatant|}}
    <div class="flex flex-row text-white text-shadow font-bold {{if combatant.isYou 'sticky bottom-0'}}">
      <div class="absolute -z-2 w-full bg-black opacity-25 h-6 {{if combatant.isYou 'opacity-75'}}"></div>

      <div class="absolute -z-1 pl-20 h-6 content-box opacity-90 bg-{{combatant.jobNameNoSpace}}" style="width: {{combatant.percentageOfMaxDamage}}%"></div>

      {{#each this.columns as |column|}}
        {{#if (eq column.value 'Job')}}
          <div class="flex flex-row items-center space-x-1 text-xs font-mono uppercase {{column.class}}">
            <span class="opacity-75">
              {{combatant.rank}}
            </span>

            <img class="w-6" alt="{{combatant.jobName}} Job Icon" src={{combatant.jobIconFilepath}}/>

            <span class="uppercase opacity-80">
              {{combatant.Job}}
            </span>
          </div>
        {{else}}
          <div class="{{column.class}}">
            {{get combatant column.value}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  {{/each}}
</div>